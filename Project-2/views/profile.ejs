<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Profile Page</title>
  </head>
  <body>
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
      <div class="flex justify-between">
        <h1 class="text-2xl">Welcome, <%= user.name %></h1>
        <a href="/logout" class="bg-blue-600 px-6 py-2 rounded-lg"> Log Out</a>
      </div>
      <h5 class="mb-5">You can create a New Post</h5>
      <form action="/post" method="POST">
        <textarea
          name="content"
          id=""
          placeholder="What's On Your Mind ?"
          class="resize-none border-2 border-zinc-700 outline-none bg-transparent rounded-md p-3 w-1/3 block"
        ></textarea>
        <input
          type="submit"
          value="Create New Post"
          class="px-6 py-2 block bg-blue-600 rounded-lg mt-2 text-sm"
        />
      </form>
      <div class="posts mt-20">
        <h3 class="text-2xl text-zinc-400">Your Post</h3>
        <div class="postContainer">
          <% user.posts.reverse().forEach(function(post){%>
          <div class="post w-1/3 p-4 border-2 border-zinc-700 rounded-md mt-2">
            <h4 class="userName text-blue-500 mb-3">@<%= user.username%></h4>
            <p class="text-sm tracking-tight"><%= post.content%></p>
            <div class="btns flex gap-4 mt-5">
              <a href="" class="text-blue-500">Like</a>
              <a href="" class="text-zinc-600">Edit</a>
            </div>
          </div>
          <%})%>
        </div>
      </div>
    </div>
  </body>
</html>
